{{#if message}}
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" {{action 'dismissMessage'}}><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  {{message}}
</div>
{{/if}}

<h1>{{name}}</h1>

<div class="trip-dates">
  {{startDate}} to {{endDate}}
</div>

<div class="well">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <label>Trip Name</label>
        {{input type="text" value=name class="form-control"}}
      </div>
      <div class="form-group">
        <label>When does your trip start?</label>
        {{input type="date" value=startDate class="form-control"}}
      </div>
      <div class="form-group">
        <label>When does your trip end?</label>
        {{input type="date" value=endDate class="form-control"}}
      </div>
    </div>
  </div>

  <button class="btn btn-default" {{action 'saveTrip'}}>Save Trip</button>
</div>
