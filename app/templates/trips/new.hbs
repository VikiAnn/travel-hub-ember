{{#if message}}
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" {{action 'dismissMessage'}}><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  {{message}}
</div>
{{/if}}

<form {{action "saveTrip" on="submit"}}>
  <div class="well">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-group">
          <label>Trip Name</label>
          {{input type="text" value=name class="name form-control"}}
        </div>
        <div class="form-group">
          <label>When does your trip start?</label>
          {{input type="text" value=startDate class="start-date form-control"}}
        </div>
        <div class="form-group">
          <label>When does your trip end?</label>
          {{input type="text" value=endDate class="end-date form-control"}}
        </div>
      </div>
      <div class-"form-group">
        <label>What Twitter accounts would you like to follow during this trip? (ex: @j3, @novohispano, @stevekinney)</label>
        {{input type="text" value=twitterAccounts}}
      </div>
      <div class-"form-group">
        <label>What Instagram accounts would you like to follow during this trip? (ex: j3, novohispano, stevekinney)</label>
        {{input type="text" value=instagramAccounts}}
      </div>
    </div>

    <button class="submit" type="submit">Save Trip</button>
  </div>
</form>
